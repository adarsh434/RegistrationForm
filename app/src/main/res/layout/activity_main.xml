<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="REGISTRATION FORM"
                android:textColor="#EB0A0A"
                android:textSize="20sp"
                android:textStyle="bold" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/enterFirstName"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:text="Enter First Name:"/>
            <EditText
                android:layout_marginLeft="5dp"
                android:id="@+id/firstName"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/enterFirstName"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingTop="30dp"
                android:gravity="center"
                android:hint="Enter First Name"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/enterLastName"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:text="Enter Last Name:"/>
                <EditText
                    android:layout_marginLeft="5dp"
                    android:id="@+id/lastName"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/enterLastName"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:hint="Enter Last Name"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/marksType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:text="Marks Type:"/>
            <CheckBox
                android:id="@+id/percentage"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/marksType"
                android:layout_height="wrap_content"
                android:text="PRECENTAGE" />
            <CheckBox
                android:id="@+id/cgpa"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/percentage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="CGPA"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/enter10thMarks"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:text="Enter 10th Marks:"/>
                <EditText
                    android:layout_marginLeft="5dp"
                    android:id="@+id/Marks10th"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/enter10thMarks"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:hint="Enter 10th Marks"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/enter12thMarks"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:text="Enter 12th Marks:"/>
                <EditText
                    android:layout_marginLeft="5dp"
                    android:id="@+id/Marks12th"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/enter12thMarks"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:hint="Enter 12th Marks"/>
            </androidx.constraintlayout.widget.ConstraintLayout>>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/enterStream"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:text="Enter Stream:"/>
                <EditText
                    android:layout_marginLeft="5dp"
                    android:id="@+id/stream"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/enterStream"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:hint="Enter Stream"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/enterFatherName"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:text="Enter Father's Name:"/>
                <EditText
                    android:layout_marginLeft="5dp"
                    android:id="@+id/fatherName"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/enterFatherName"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:hint="Enter Father's Name"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/enterMotherName"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:text="Enter Mother's Name:"/>
                <EditText
                    android:layout_marginLeft="5dp"
                    android:id="@+id/motherName"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/enterMotherName"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:hint="Enter Mother's Name"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/enterCity"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:text="Enter City:"/>
                <EditText
                    android:layout_marginLeft="5dp"
                    android:id="@+id/cityName"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/enterCity"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:hint="Enter City"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/enterMobileNumber"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:text="Enter Mobile Number:"/>
                <EditText
                    android:layout_marginLeft="5dp"
                    android:id="@+id/mobileNumber"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/enterMobileNumber"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:hint="Enter Mobile Number"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/selectGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:text="Gender:"/>
                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="@id/selectGender"
                    app:layout_constraintStart_toEndOf="@id/selectGender">
                    <RadioButton
                        android:id="@+id/maleGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male" />
                    <RadioButton
                        android:id="@+id/femaleGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Female"
                        />
                </RadioGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/selectSkills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:text="Skills:"/>
                <CheckBox
                    android:layout_marginLeft="10dp"
                    android:id="@+id/c"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/selectSkills"
                    android:layout_height="wrap_content"
                    android:text="C" />
                <CheckBox
                    android:id="@+id/Python"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/c"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Python"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="150dp"
                android:text="Submit"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>